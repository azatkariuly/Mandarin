<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zerotoone.n17r.mandarin.FragmentMainActivity.BrainstormFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardsBtn"
        android:text="Flashcards"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/learnBtn"
        android:text="Learn"
        android:onClick="onClick"
        android:layout_below="@+id/cardsBtn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/spellBtn"
        android:text="Spell"
        android:onClick="onClick"
        android:layout_below="@+id/learnBtn"/>

</RelativeLayout>
