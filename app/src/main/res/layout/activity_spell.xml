<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zerotoone.n17r.mandarin.Memrise.SpellActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageSpell"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="97dp"
        android:onClick="onClick"
        android:src="@drawable/ic_volume"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type what you hear"
        android:id="@+id/answerSpell"
        android:layout_toRightOf="@+id/imageSpell"
        android:layout_marginTop="90sp"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/answerSpellBtn"
        android:layout_below="@+id/questionLearn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="90sp"
        android:id="@+id/answerSpellBtn"
        android:textColor="#fff"
        android:background="#3ccfcf"
        android:onClick="onClick"/>

    <View
        android:layout_width="match_parent"
        android:id="@+id/lineView"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/answerSpell"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pinyinSpell"
        android:layout_below="@+id/lineView"
        android:text="Pinyin"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>


</RelativeLayout>
