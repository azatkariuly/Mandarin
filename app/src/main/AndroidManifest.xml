<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zerotoone.n17r.mandarin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Mandarin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:label="Sign Up" />
        <activity
            android:name=".Memrise.CardsActivity"
            android:label="Flashcards"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Memrise.LearnActivity"
            android:label="Learn"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Memrise.LearnScoreActivity"
            android:label="Score"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Memrise.SpellActivity"
            android:label="Spell"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Memrise.DrawActivity"
            android:label="Draw"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Memrise.ListenScoreActivity"></activity>
    </application>

</manifest>